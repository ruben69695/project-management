<?xml version="1.0" encoding="UTF-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Models"
                   namespace="Models">
    <class name="WorkMethodology">
        <id name="Code" />
        <property name="Name" />

        <bag name="Projects" table="Project">
            <key column="WorkMethodologyCode" />
            <one-to-many class="Project" />
        </bag>
    </class>
</hibernate-mapping>