<?xml version="1.0" encoding="UTF-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Models"
                   namespace="Models">
    <class name="Role">
        <id name="Code" />
        <property name="Name" />

        <bag name="Persons" table="Person">
            <key column="RoleCode" />
            <one-to-many class="Person" />
        </bag>
    </class>
</hibernate-mapping>